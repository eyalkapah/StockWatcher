<Page
    x:Class="StockWatcher.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StockWatcher.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    mc:Ignorable="d">

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>


            <TextBox
                Height="30"
                Margin="0,0,0,4"
                FontSize="14"
                Text="{Binding Ticker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="4,0,0,4"
                VerticalAlignment="Center"
                Command="{Binding AddTickerCommand}"
                Content="Add"
                IsEnabled="{Binding CanAddTicker, Mode=OneWay}" />

            <ListView
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                ItemsSource="{Binding Tickers}">

                <!--<ListView.View>
                    <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">

                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Path=Symbol}"
                            Header="Symbol" />

                -->
                <!--<GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=LastName}">
                            <GridViewColumnHeader>
                                Last Name
                                <GridViewColumnHeader.ContextMenu>
                                    <ContextMenu Name="LastNameCM" MenuItem.Click="LastNameCM_Click">
                                        <MenuItem Header="Ascending" />
                                        <MenuItem Header="Descending" />
                                    </ContextMenu>
                                </GridViewColumnHeader.ContextMenu>
                            </GridViewColumnHeader>
                        </GridViewColumn>-->
                <!--

                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Path=Last}"
                            Header="Last" />

                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Path=Change}"
                            Header="Chg" />

                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Path=ChangeP}"
                            Header="Chg%" />
                    </GridView>

                </ListView.View>-->
            </ListView>
        </Grid>
    </Grid>
</Page>
